<div class="col-xs-12 d-flex justify-content-center vh-100">
    <div class="row align-self-center">
        <form action="/upload" method="POST" enctype="multipart/form-data">
            <div class="mb-3 mt-5 text-center">
                <label class="form-label fw-bold font-monospace">Picture title</label>
                <input type="text" class="form-control" name="title" placeholder="Title" required>

            </div>
            <div class="mb-3 mt-4 text-center">
                <label class="form-label mb-3 fw-bold font-monospace">Upload picture file</label>
                <input class="form-control mb-3" type="file" name="pic" required>
            </div>
            <div class="d-flex justify-content-center mt-4">
                <button type="submit" class="btn btn-primary">Upload Picture</button>
            </div>
        </form>
    </div>
</div>